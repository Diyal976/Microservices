<?xml version="1.0" encoding="UTF-8"?>
<ObjectDefinition>  <information>
    <configType>cli</configType>
    <createTemplateId/>
    <createTemplateObject/>
    <defaultDisplay>true</defaultDisplay>
    <description/>
    <displayField>object_id</displayField>
    <dynamic>false</dynamic>
    <group>VM</group>
    <icon>/images/repository/CommandDefinition/icons/web cluster.jpg</icon>
    <importIfMandatoryPresent>false</importIfMandatoryPresent>
    <importonce>false</importonce>
    <importrank>1</importrank>
    <maxInstances>0</maxInstances>
    <name>Virtual Machines</name>
    <order>10000</order>
    <relatedObjects/>
    <reorderinstances>false</reorderinstances>
    <sortascending>true</sortascending>
    <sortauto>true</sortauto>
    <sortnumerical>true</sortnumerical>
    <sortvariable>params._order</sortvariable>
    <visibility>5</visibility>
  </information>  <variables frozen="0">
    <variable displayName="_color" displayOrder="0" editable="false" maxLength="100" name="params._color" numberOfRowMax="0" startIncrement="0" tableSizeFix="false" type="String" visible="false"/>
    <variable displayName="ID" displayOrder="1" maxLength="10" name="params.vm_id" numberOfRowMax="0" startIncrement="0" tableSizeFix="false" type="String"/>
    <variable displayName="Name" displayOrder="2" maxLength="100" name="params.object_id" numberOfRowMax="0" startIncrement="0" tableSizeFix="false" type="String"/>
    <variable displayName="State" displayOrder="3" maxLength="100" name="params.vm_state" numberOfRowMax="0" startIncrement="0" tableSizeFix="false" type="String"/>
    <variable displayName=" " displayOrder="4" editable="false" maxLength="1" name="params.image" numberOfRowMax="0" startIncrement="0" tableSizeFix="false" type="ObjectRef">
      <classes>
        <class>kvm_images</class>
      </classes>
    </variable>
  </variables>  <example>
    <content>3     17.1_P5_ForQA                  running
 -     16.1.2_GA_KVM                  shut off
 -     16.2.2-P11                     shut off
 -     17.1-P5-Official               shut off
 -     17.1GA                         shut off
 -     17.1GA_2                       shut off
 -     DBHA                           shut off
 -     DBHA-16.2                      shut off
</content>
  </example>
  <command name="IMPORT">
    <operation>virsh list --all | grep -v Name | grep -v "\-\-" </operation>
    <parser>
      <section>
        <regexp>@(?&lt;vm_id&gt;\S+)\s+(?&lt;object_id&gt;\S+)\s+(?&lt;vm_state&gt;.*)@</regexp>
      </section>
      <lines>
        <ignore>
          <regexp>@\S+#@</regexp>
        </ignore>
      </lines>
    </parser>
    <post_template>{if $params.vm_state == 'running'}
 {assign_object_variable var="_color" value="green"}
{else}
 {assign_object_variable var="_color" value="red"}
{/if}</post_template>
  </command>
<command name="CREATE">
    <operation>virt-install --connect=qemu:///system --name={$params.object_id} --os-type=linux --os-variant=rhel4 --arch=x86_64 --cpu host --vcpus=1,sockets=1,cores=1,threads=1 --hvm --ram=4096 --import --disk path=/home/vm/{$params.image},format=qcow2 --network bridge=virbr0,model=virtio --noreboot


virsh --connect qemu:///system start {$params.object_id}
</operation>
  </command>

<command name="DELETE">
    <operation>virsh shutdown {$params.object_id}
virsh undefine {$params.object_id}
</operation>
  </command>
</ObjectDefinition>
